@model Gym.Models.ShakeAndTosaf

@{
    ViewData["Title"] = "ShakeAndTosafDetails";
}
<div>
    <center><h1>@Model.name</h1></center>
    <hr />
    <img src="data:image;base64,@System.Convert.ToBase64String(Model.photo)" style="float:left;" width="240" height="280" />
    <dl class="row">       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kosher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kosher)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.taste)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taste)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.halavi)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.halavi)
            {
                <span>חלבי</span>
            }
            else
            {
                <span>פרווה</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeOf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeOf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.protein)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.protein)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.calories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.calories)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.carbs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.carbs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amountAvailable)
        </dd>
    </dl>
    <p>
        @if (DataLayer.User.firstName != "התחבר")
        {
          <button class="btn2" style="padding:22px 28px" >
             <a asp-action="AddToCart" asp-route-ID="@Model.ID" style="color:white" asp-route-name="@Model.name" asp-controller="Home">הוסף לעגלה
                <span class="glyphicon glyphicon-shopping-cart"></span>
             </a>
          </button>
        }
        else
        {
            <span style="color:red"> התחבר כדי להוסיף לעגלה!! </span>
        }
     </p>
</div>
