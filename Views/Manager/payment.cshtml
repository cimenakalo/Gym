<div class="card">
    <div class="card-top border-bottom text-center">
        <a href="//localhost:44319/">חזרה לדף ראשי</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-7">
                <div class="left border">
                    <div class="row">
                        <span class="header">תשלום</span>
                        <div class="icons">
                            <img src="https://img.icons8.com/color/48/000000/visa.png" />
                            <img src="https://img.icons8.com/color/48/000000/mastercard-logo.png" />
                            <img src="https://img.icons8.com/color/48/000000/maestro.png" />
                        </div>
                    </div>
                    <form>
                        <span>שם בעל כרטיס:</span>
                        <input placeholder="Linda Williams">
                        <span>מספר כרטיס:</span>
                        <input placeholder="0125 6780 4567 9909">
                        <div class="row">
                            <div class="col-4">
                                <span> תאריך תפוגה:</span>
                                <input placeholder="YY/MM">
                            </div>
                            <div class="col-4">
                                <span>קוד :</span>
                                <input id="cvv">
                            </div>
                        </div>
                        <input type="checkbox" id="save_card" class="align-left">
                        <label for="save_card">שמור כרטיס </label>
                    </form>
                </div>
            </div>
            <div class="col-md-5">
                <div class="right border">
                    <div class="header">פרטי הזמנה:</div>
                    <p>@DataLayer.User.Cart.totalAmount </p>
                    @foreach (VmEquipment vmE in DataLayer.User.Cart.EquipmentList)
                    {
                        <div class="row item">
                            <div class="col-8">
                                <div class="row"><b>@vmE.toString</b></div>
                                <div class="row"><b>@vmE.getPrice ₪</b></div>
                                <div class="row">Qty:@vmE.amount</div>
                            </div>
                        </div>
                    }
                    @foreach (VmShakesTosaf vmS in DataLayer.User.Cart.ShakeAndTosafList)
                    {
                        <div class="row item">
                            <div class="col-8">
                                <div class="row"><b>@vmS.toString</b></div>
                                <div class="row"><b>@vmS.getPrice ₪</b></div>
                                <div class="row">Qty:@vmS.amount</div>
                            </div>
                        </div>
                    }
                    <hr>
                    <div class="row lower">
                        <div class="col text-left">סהכ לתשלום:</div>
                        <div class="col text-right">@DataLayer.User.Cart.totalPrice ₪</div>
                    </div>
                    <div class="row lower">
                        <div class="col text-left">Delivery</div>
                        <div class="col text-right">Free</div>
                    </div>
                    <div class="row lower">
                        <div class="col text-left"><a href="#"><u>Add promo code</u></a></div>
                    </div>
                    <a asp-action="finishOrder" asp-controller="Manager">
                        <button class="btn2" style="padding:8px 24px;">בצע תשלום</button>
                    </a>
                    <p class="text-muted text-center">Complimentary Shipping & Returns</p>
                </div>
            </div>
        </div>
    </div>

    <div>
    </div>
</div>